import React from 'react';

type Props = {
  text: string;
  loading: boolean;
};

export function LoadingBtn({ text, loading }: Props) {
  return (
    <button
      className={`w-1/3 h-10 ml-32 rounded-md border-lightGoldmd bg-transparent border-2 border-lightGold 
		hover:bg-lightGold hover:text-black transition-colors duration-500 ${loading && "animate-pulse animate-bounce"}`}
      type="submit"
    >
      {loading ? 'Loading' : text}
    </button>
  );
}
